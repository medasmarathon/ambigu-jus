{
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
     "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "dist/",
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "@app/*": [ "./src/*" ],
    }
  },
  "include": [
    "src/**/*"
  ]
}
